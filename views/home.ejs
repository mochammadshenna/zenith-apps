<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Rampart+One&family=Ubuntu:wght@500&display=swap"
    rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link href="https://fonts.googleapis.com/css2?family=Montez&display=swap" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <title>ZENITH</title>
  <link rel="stylesheet" href="/styles/style.css" />
</head>

<body>
  <nav class="navbar navbar-expand-lg fixed-top ">
    <div class="container-fluid justify-content-lg-center align-content-lg-center max-width">
      <div class="logo">
        <a class="navbar-brand fs-1 fw-bold">ZE<span>NITH</span></a>
      </div>
      <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 menu">
          <% if (locals.sessionData) { %>
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/products/<%= sessionData.id %>">Product</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
            </li>
            <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="#home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#product">Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/add-user">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Log In</a>
              </li>
              <% } %>
      </div>
    </div>
  </nav>
  <!-- Home -->
  <section>
    <div class="home" id="home">
      <h1>Hallo! Selamat Datang di Website</h1>
      <h3>ZENITH</h3>
      <p id="slogan">Apa yang anda cari</p>
      <a href="#product" role="button" class="btn btn-outline-warning">Klik Disini!
      </a>
      <img src="/images/olha-ivanova-AGYeoocp1Yg-unsplash-removebg-preview.png" alt="" srcset="" />
      <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <path fill="#F1C21B"
          d="M43.1,-66.2C55,-59.3,63.4,-46,64.1,-32.7C64.8,-19.4,57.8,-6,58.3,10.1C58.7,26.3,66.5,45.3,61.7,56.9C57,68.4,39.7,72.5,23.1,76.3C6.5,80,-9.5,83.4,-23.9,79.9C-38.4,76.4,-51.3,66,-59.9,53.4C-68.5,40.8,-72.8,25.9,-73.2,11.6C-73.6,-2.8,-70.1,-16.6,-63.1,-27.5C-56.1,-38.4,-45.5,-46.5,-34.4,-53.7C-23.3,-61,-11.7,-67.6,1.9,-70.6C15.5,-73.6,31.1,-73.1,43.1,-66.2Z"
          transform="translate(100 100)" />
      </svg>
    </div>
  </section>
  <!-- About -->
  <section>
    <div class="about" id="about">
      <h1>Zenith</h1>
      <p>
        Zenith
        <br /><b>#localpride</b>
      </p>
    </div>
  </section>
  <!-- cards -->
  <section class="mb-5">
    <div class="max-width">
      <div id="product">
        <h1 class="title">Toko Kami</h1>
        <div id="map"></div>
      </div>
      <h1 class="title d-flex justify-content-center">Produk</h1>
      <div class="mt-3 row row-cols-1 row-cols-md-3 g-4">
        <br><br>
        <form action="/?search=" mthod="get">
          <div class="mb-3">
            <label for="search" class="form-label">Seacrh</label>
            <input type="text" class="form-control" name="search" id="search" class="form-label">
          </div>
          <button type="submit" class="btn btn-primary">search</button>
        </form>
        <p></p>
        <p></p>
        <% data.product.forEach(el=> { %>
          <div class="col">
            <div class="card">
              <img src="<%= el.imageUrl %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= el.isPremium() %>
                </h5>
                <p class="card-text">
                  <%= el.description %>
                </p>
                <p class="card-text">
                  <%= el.stock %>
                </p>
                <p class="card-text">
                  <%= formatCurrency(el.price) %>
                </p>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </section>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDow26c7qmhoolIzEXkW9DRtPCaW7HrmQM&callback=initMap&libraries=places&v=weekly"
    async></script>
  <script>
    let dataMap = []
  </script>
  <% data.profile.forEach(el=> { %>
    <script>
      dataMap.push(['<%= el.lat %>', '<%= el.lng %>', '<%= el.shopName %>'])
    </script>
    <% }) %>
      <script src="/scripts/home.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>