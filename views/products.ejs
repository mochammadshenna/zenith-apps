<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Rampart+One&family=Ubuntu:wght@500&display=swap"
    rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link href="https://fonts.googleapis.com/css2?family=Montez&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/products.css" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <title>Zenith</title>
  <link rel="stylesheet" href="/styles/products.css" />
</head>

<body>
  <nav class="navbar navbar-expand-lg fixed-top ">
    <div class="container-fluid justify-content-lg-center align-content-lg-center max-width">
      <div class="logo">
        <a class="navbar-brand fs-1 fw-bold">ZE<span>NITH</span></a>
      </div>
      <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0 menu">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products/<%= sessionData.id %>">Product</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Log Out</a>
          </li>
      </div>
    </div>
  </nav>
  <div class="about" id="about">
    <h2 class="welcome d-flex justify-content-center">Welcome Back <%= sessionData.username %> !</h2>
    <h1>About:</h1>
    <p><img src="<%= sessionData.displayPicture %>" height="50px" width="50px"></p>
    <p>Alamat <br>
      <%= sessionData.address %>
    </p>
    <p class="d-none" id="lat">
      <%= sessionData.lat %>
    </p>
    <p class="d-none" id="lng">
      <%= sessionData.lng %>
    </p>
    <p class="d-none" id="shopName">
      <%= sessionData.shopName %>
    </p>

    <div id="map"></div>
    <p>Hubungi<br>
      (+62) <%= sessionData.phone %>
    </p>
  </div>
  <section>
    <div class="btn-group d-flex justify-content-center mt-5" role="group" aria-label="Basic mixed styles example">
      <a href="/products/<%= sessionData.id %>/add" role="button" class="btn btn-danger">Add Product</a>
      <a href="/profiles/<%= sessionData.id %>/edit" role="button" class="btn btn-success">Edit Profile</a>
    </div>
    <h1 class="title d-flex justify-content-center">Produk dari <%= sessionData.shopName %>
    </h1>
    <div class="mt-3 row row-cols-1 row-cols-md-3 g-4">
      <% data.forEach(el=> { %>
        <div class="col">
          <div class="card">
            <img src="<%= el.imageUrl %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title">
                <%= el.productName %>
              </h5>
              <p class="card-text">Description: <%= el.description %>
              </p>
              <p class="card-text">Stock: <%= el.stock %>
              </p>
              <p class="card-text">Price: <%= el.price %>
              </p>
              <p class="card-text"><a href="/products/<%= sessionData.id %>/edit/<%= el.id %>" class="btn btn-success"
                  role="button">EDIT</a></p>
              <p class="card-text"><a href="/products/<%= sessionData.id %>/delete/<%= el.id %>" class="btn btn-danger"
                  role="button">DELETE</a></p>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
    </div>
  </section>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDow26c7qmhoolIzEXkW9DRtPCaW7HrmQM&callback=initMap&libraries=places&v=weekly"
    async></script>
  <script src="/scripts/products.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>

</html>